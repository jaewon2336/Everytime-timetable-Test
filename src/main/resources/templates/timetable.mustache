<!DOCTYPE html>
<html lang="en">

<head>
    <title>유저페이지</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>

    <div class="container">

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th></th>
                    <th>월</th>
                    <th>화</th>
                    <th>수</th>
                    <th>목</th>
                    <th>금</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>오전 9시</td>
                    <td id="mon-9"></td>
                    <td id="tue-9"></td>
                    <td id="wed-9"></td>
                    <td id="thu-9"></td>
                    <td id="fri-9"></td>
                </tr>
                <tr>
                    <td>오전 10시</td>
                    <td id="mon-10"></td>
                    <td id="tue-10"></td>
                    <td id="wed-10"></td>
                    <td id="thu-10"></td>
                    <td id="fri-10"></td>
                </tr>
                <tr>
                    <td>오전 11시</td>
                    <td id="mon-11"></td>
                    <td id="tue-11"></td>
                    <td id="wed-11"></td>
                    <td id="thu-11"></td>
                    <td id="fri-11"></td>
                </tr>
                <tr>
                    <td>오전 12시</td>
                    <td id="mon-12"></td>
                    <td id="tue-12"></td>
                    <td id="wed-12"></td>
                    <td id="thu-12"></td>
                    <td id="fri-12"></td>
                </tr>
                <tr>
                    <td>오후 1시</td>
                    <td id="mon-13"></td>
                    <td id="tue-13"></td>
                    <td id="wed-13"></td>
                    <td id="thu-13"></td>
                    <td id="fri-13"></td>
                </tr>
                <tr>
                    <td>오후 2시</td>
                    <td id="mon-14"></td>
                    <td id="tue-14"></td>
                    <td id="wed-14"></td>
                    <td id="thu-14"></td>
                    <td id="fri-14"></td>
                </tr>
                <tr>
                    <td>오후 3시</td>
                    <td id="mon-15"></td>
                    <td id="tue-15"></td>
                    <td id="wed-15"></td>
                    <td id="thu-15"></td>
                    <td id="fri-15"></td>
                </tr>
                <tr>
                    <td>오후 4시</td>
                    <td id="mon-16"></td>
                    <td id="tue-16"></td>
                    <td id="wed-16"></td>
                    <td id="thu-16"></td>
                    <td id="fri-16"></td>
                </tr>
                <tr>
                    <td>오후 5시</td>
                    <td id="mon-17"></td>
                    <td id="tue-17"></td>
                    <td id="wed-17"></td>
                    <td id="thu-17"></td>
                    <td id="fri-17"></td>
                </tr>
            </tbody>
        </table>
        <button class="btn btn-outline-danger" data-toggle="modal" data-target="#myModal">등록</button>
    </div>


    <!-- The Modal -->
    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">새 수업 추가</h4>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <table>
                        <input id="userId" type="hidden" value="{{userId}}">
                        <tr>
                            <td>과목명</td>
                            <td><select id="courseName" class="form-control ml-4">
                                    {{#timetableResDto.courses}}
                                    <option>{{name}}</option>
                                    {{/timetableResDto.courses}}
                                </select></td>
                        </tr>
                        <tr>
                            <td>교수명</td>
                            <td><select id="professorName" class="form-control ml-4">
                                    {{#timetableResDto.professors}}
                                    <option>{{name}}</option>
                                    {{/timetableResDto.professors}}
                                </select></td>
                        </tr>
                        <tr>
                            <td>시간</td>
                            <td>

                                <div class="form-row ml-4">
                                    <select id="weekday" name="weekday" class="form-control col-md-3 mr-3">
                                        <option id="day" name="day" value="mon">월</option>
                                        <option id="day" name="day" value="tue">화</option>
                                        <option id="day" name="day" value="wed">수</option>
                                        <option id="day" name="day" value="thu">목</option>
                                        <option id="day" name="day" value="fri">금</option>
                                    </select>
                                    <select id="startTime" name="startTime" class="form-control col-md-3 mr-2">
                                        <option value="9">9</option>
                                        <option value="10">10</option>
                                        <option value="11">11</option>
                                        <option value="12">12</option>
                                        <option value="13">13</option>
                                        <option value="14">14</option>
                                        <option value="15">15</option>
                                        <option value="16">16</option>
                                        <option value="17">17</option>
                                        <option value="18">18</option>
                                    </select>~
                                    <select id="endTime" name="endTime" class="form-control col-md-3 ml-2">
                                        <option value="9">9</option>
                                        <option value="10">10</option>
                                        <option value="11">11</option>
                                        <option value="12">12</option>
                                        <option value="13">13</option>
                                        <option value="14">14</option>
                                        <option value="15">15</option>
                                        <option value="16">16</option>
                                        <option value="17">17</option>
                                        <option value="18">18</option>
                                    </select>

                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>장소</td>
                            <td>
                                <select id="classroom" class="form-control ml-4">
                                    {{#timetableResDto.courses}}
                                    <option>{{classroom}}</option>
                                    {{/timetableResDto.courses}}
                                </select>
                            </td>
                        </tr>
                    </table>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button id="saveBtn" type="button" class="btn btn-danger" data-dismiss="modal">저장</button>
                </div>

            </div>
        </div>
    </div>

    <script>
        const colors = ["red", "grey", "orange", "green", "yellow", "antiquewhite", "cornflowerblue"]

        $("#saveBtn").click(() => {
            saveTimetable();
        });

        async function saveTimetable() {

            let id = $("#userId").val();

            let data = {
                userId: $("#userId").val(),
                courseName: $("#courseName").val(),
                professorName: $("#professorName").val(),
                day: $("#weekday").val(),
                courseTime: $("#endTime").val() - $("#startTime").val()
            }

            // 1. 해당 값 JSON.stringify(data)으로 fetch 통신해서 insert 하기 (POST 통신)
            let response = await fetch(`/user/${id}/timetable`, {
                headers: {
                    'Content-Type': 'application/json;charset=utf-8'
                },
                method: 'POST',
                body: JSON.stringify(data)
            });

            let responseParse = await response.json();

            // 2. 성공하면 화면 변경
            if (responseParse == 1) {
                setCourse(data);
            } else {
                alert("실패");
            }
        }

        function setCourse(data) {
            let num = Math.floor(Math.random() * 7); // 0~6

            // 1. 과목명
            let temp = `${data.professorName} <br/> ${data.courseName}`
            $(`#${data.day}-${Number(data.courseTime)}`).html(temp);

            // 2. 색상
            for (i = 0; i < 3; i++) {
                $(`#${data.day}-${Number(data.courseTime) + i}`).css("background-color", colors[num]);
            }
        }
    </script>
</body>

</html>